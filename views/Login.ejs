<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>login</title>

    <%- include("./LoginCSS");%>
  </head>
  <body>
    <div class="container">
      <form class="login1">
        <h1>LOGIN</h1>
        <div class="login2" >
          <label for="text1" class="form-label">Email address</label>
          <input type="email" name="email-login" class="form-control" id="text1" aria-describedby="emailHelp"
          />
        </div>
        <div class="login2">
          <label for="text2" class="form-label">Password</label>
          <input type="password" name="password-logn" class="form-control" id="text2" />
        </div>
        <button type="button" class="btn_login" onclick="Dangnhap()">LOGIN</button>
        <span
          ><br />Do not have an account ?<a href="./SignUp.ejs" >
            Sign Up Here</a
          ></span
        >
      </form>
      <script>
        const fromlogin = document.querySelectorAll(".login2 input");
        const fromlabel = document.querySelectorAll(".login2 label");
        for (let i = 0; i < 2; i++) {
          fromlogin[i].addEventListener("mouseover", function () {
            fromlabel[i].classList.add("focus");
          });
          fromlogin[i].addEventListener("mouseout", function () {
            if (fromlogin[i].value == "") {
              fromlabel[i].classList.remove("focus");
            }
          });
        }
      </script>
    </div>
  </body>
</html>
